<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="learnenglishhou.bluebirdaward.com.englishe.kiemtra.KiemTraCauHoiFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy trả lời câu hỏi sau:" />

    <TextView
        android:id="@+id/tvCauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where is James going to ?" />

    <Button
        android:text="Nói"
        android:id="@+id/btnKiemTraCauHoi"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCauTraLoiCuaNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDapAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDungHaySai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
