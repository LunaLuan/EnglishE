<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="learnenglishhou.bluebirdaward.com.englishe.chude.ChuDeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitXY"
            android:src="@drawable/silver_medal" />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:clickable="false"
            android:max="100"
            android:progress="50" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitXY"
            android:src="@drawable/gold_medal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btnXemSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickXemSub"
        android:text="Xem sub" />

    <LinearLayout
        android:id="@+id/fragment_sub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickChoiTiNao"
            android:text="Kiá»ƒm tra" />
    </LinearLayout>


</LinearLayout>
